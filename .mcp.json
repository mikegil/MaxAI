{
    "mcpServers": {
        "context7": {
            "type": "http",
            "description": "Up to date API info",
            "command": "bun",
            "args": [
                "x",
                "@upstash/context7-mcp"
            ],
            "url": "https://mcp.context7.com/mcp",
            "env": {
                "API_KEY": "${CONTEXT7_API_KEY}"
            }
        },
        "playwright": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "mcp/playwright"
            ]
        },
        "MCP_DOCKER": {
            "command": "docker",
            "args": [
                "mcp",
                "gateway",
                "run"
            ],
            "type": "stdio"
        }
    }
}